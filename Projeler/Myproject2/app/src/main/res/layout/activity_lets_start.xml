<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lets_start">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="247dp"
        android:layout_height="247dp"

        android:layout_marginStart="82dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="412dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_illustration_1" />

    <TextView
        android:id="@+id/textView"
        style="@style/Keys"
        android:layout_width="187dp"
        android:layout_height="50dp"
        android:layout_marginTop="355dp"
        android:layout_marginBottom="326dp"
        android:fontFamily="@font/acme"
        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="1.0"
        android:text="Let's Start!"
        android:textAlignment="center"
        android:textAppearance="@style/KeysAppearance"
        android:textColor="#2C2B47"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="331dp"
        android:layout_height="45dp"
        android:layout_marginTop="422dp"
        android:layout_marginBottom="249dp"
        android:background="#F2F2F3"
        android:backgroundTint="#F2F2F3"
        android:ems="10"
        android:fontFamily="@font/acme"
        android:hint="E-mail"
        android:inputType="textEmailAddress"


        android:paddingStart="10dp"
        android:textColorHint="#2C2B47"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="331dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="486dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="200dp"
        android:background="#F2F2F3"
        android:backgroundTint="#F2F2F3"
        android:ems="10"
        android:fontFamily="@font/acme"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColorHint="#2C2B47"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="126dp"
        android:layout_height="58dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="133dp"
        android:background="#2C2B47"
        android:fontFamily="@font/acme"
        android:lineSpacingExtra="14sp"
        android:text="Sing in"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFF1EF"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="172dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="626dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/acme"
        android:text="Don't have an account?"
        android:textAlignment="viewEnd"
        android:textColor="#B9B8C6"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="626dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/acme"
        android:text="Sign up"
        android:textAlignment="textStart"
        android:textColor="#2C2B47"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="16dp"
        android:layout_height="10.67dp"
        android:layout_marginStart="341dp"
        app:layout_constraintBottom_toBottomOf="@+id/editText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText2"
        app:layout_constraintVertical_bias="0.529"
        app:srcCompat="@drawable/ic_eye_solid" />


</androidx.constraintlayout.widget.ConstraintLayout>